<% provide :title, '人気投稿' %>

<div class="container pt-4">
  <div class="row mx-auto">
    <div class="offset-sm-2 col-sm-8">
        <% if @popular_posts.any? %>
          <%= render partial: 'index_feed', locals: { posts: @popular_posts, comment: @comment} %>
        <% else %>
          <div class="no-contents d-flex flex-column align-items-center justify-content-center mx-auto">
            <div class="no-contents-title font-weight-bold">投稿がありません</div>
            <div class="no-contents-explanation text-center">人気の投稿がここに表示されます。</div>
          </div>
        <% end %>
    </div>
  </div>
</div>