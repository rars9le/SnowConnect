<% if users.any? %>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <ul class="list-unstyled">
        <% users.each do |user| %>
          <li class="media">
            <% if user.avator? %>
              <img class="mr-2 rounded icon" src='<%=  user.avator %>' width="50px" height="50px" alt="ユーザーアイコン">
            <% else %>
              <image src="/assets/default.png" class=" mr-2 rounded icon" width="50px" height="50px" alt="ユーザーアイコン" %>
            <% end %>
            <div class="media-body">
              <div>
                <%= user.name %>
              </div>
              <div>
                <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= paginate users %>
<% end %>